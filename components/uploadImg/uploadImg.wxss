.choose-img-box {
  background: white;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}
.choose-img-box .selected-img-box {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 0 20rpx 20rpx;
  position: relative;
}
.choose-img-box .selected-img-box .selected-img {
  width: 100%;
  height: 100%;
}
.choose-img-box .selected-img-box .delete {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  color: #db9e3f;
  top: 0rpx;
  right: 0rpx;
  background: white;
  border-radius: 50%;
  font-size: 24rpx;
  border: 1px solid #db9e3f;
  text-align: center;
  line-height: 30rpx;
}
.choose-img-box .preview {
  color: #9ea7b4;
  margin-left: 20rpx;
}
